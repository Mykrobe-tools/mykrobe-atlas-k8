{
  "apiVersion": "apps/v1beta2",
  "kind": "Deployment",
  "metadata": {
    "labels": {
      "app": "atlas"
    },
    "name": "atlas-deployment"
  },
  "spec": {
    "selector": {
      "matchLabels": {
        "app": "atlas"
      }
    },
    "template": {
      "metadata": {
        "labels": {
          "app": "atlas"
        }
      },
      "spec": {
        "containers": [
          {
            "image": "#{image}",
            "name": "atlas",
            "ports": [
              {
                "containerPort": 3000,
                "protocol": "TCP"
              }
            ],
            "env": [
              {
                "name": "NODE_ENV",
                "value": "production"
              },
              {
                "name": "HOST",
                "value": "0.0.0.0"
              },
              {
                "name": "PORT",
                "value": "3000"
              },
              {
                "name": "ATLAS_APP",
                "value": "$ATLAS_APP"
              },
              {
                "name": "API_URL",
                "value": "$API_URL"
              },
              {
                "name": "AUTH_COOKIE_NAME",
                "value": "$AUTH_COOKIE_NAME"
              },
              {
                "name": "API_SWAGGER_URL",
                "value": "$API_SWAGGER_URL"
              },
              {
                "name": "GOOGLE_MAPS_API_KEY",
                "value": "$GOOGLE_MAPS_API_KEY"
              },
              {
                "name": "BOX_CLIENT_ID",
                "value": "$BOX_CLIENT_ID"
              },
              {
                "name": "DROPBOX_APP_KEY",
                "value": "$DROPBOX_APP_KEY"
              },
              {
                "name": "GOOGLE_DRIVE_CLIENT_ID",
                "value": "$GOOGLE_DRIVE_CLIENT_ID"
              },
              {
                "name": "GOOGLE_DRIVE_DEVELOPER_KEY",
                "value": "$GOOGLE_DRIVE_DEVELOPER_KEY"
              },
              {
                "name": "ONEDRIVE_CLIENT_ID",
                "value": "$ONEDRIVE_CLIENT_ID"
              }
            ]
          }
        ],
        "imagePullSecrets": [{ "name": "dockerhub" }]
      }
    }
  }
}
